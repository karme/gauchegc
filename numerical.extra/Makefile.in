#
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
GAUCHE_CONFIG  = "@GAUCHE_CONFIG@"
GAUCHE_PACKAGE = "@GAUCHE_PACKAGE@"
INSTALL        = "@GAUCHE_INSTALL@"

# Set by configure
SOEXT    = @SOEXT@
DSOEXT   = @SOEXT@
OBJEXT   = @OBJEXT@


###
###
###
PACKAGE   = ggcnumextra
MODULE    = ggc.numerical.extra
DSOBASE   = ggcnumextra
SCMFILES  = extra.scm
STUBBASE  = ggc-numerical-extra
HEADERS   = 
SRCS      = ggcnumextra.c grand.c $(STUBBASE).stub

###
###
###

TARGET    = $(ARCHFILES)
ARCHFILES = $(DSOBASE).$(DSOEXT)
GENERATED = $(STUBBASE).c $(DSOBASE)_head.c $(DSOBASE)_tail.c
CONFIG_GENERATED = Makefile config.cache config.log config.status \
		   configure.lineno autom4te*.cache $(MODULE).gpd

HEADER_INSTALL_DIR  = $(DESTDIR)`$(GAUCHE_CONFIG) --siteincdir`
SCM_INSTALL_DIR     = $(DESTDIR)`$(GAUCHE_CONFIG) --sitelibdir`/ggc/numerical
GPD_INSTALL_DIR     = $(DESTDIR)`$(GAUCHE_CONFIG) --sitelibdir`/.packages
ARCH_INSTALL_DIR    = $(DESTDIR)`$(GAUCHE_CONFIG) --sitearchdir`

all : $(TARGET)

.SUFFIXES: .o .stub

TARGET    = $(ARCHFILES)
all : $(TARGET)

$(DSOBASE).$(DSOEXT): $(OBJS)
	$(GAUCHE_PACKAGE) compile --verbose ${DSOBASE} $(SRCS)

check : all
	@rm -f test.log
	$(GOSH) -fload-verbose -I. -lextra.scm test.scm > test.log

install : all
	$(INSTALL) -m 444 -T $(HEADER_INSTALL_DIR) $(HEADERS)
	$(INSTALL) -m 444 -T $(SCM_INSTALL_DIR) $(SCMFILES) 
	$(INSTALL) -m 555 -T $(ARCH_INSTALL_DIR) $(ARCHFILES)
	$(INSTALL) -m 444 -T $(GPD_INSTALL_DIR) $(MODULE).gpd

clean :
	$(GAUCHE_PACKAGE) compile --clean ${DSOBASE} $(SRCS)
	rm -rf core $(TARGET) $(GENERATED) *~ test.log so_locations

distclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED) VERSION


