# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
GAUCHE_CONFIG  = "@GAUCHE_CONFIG@"
GAUCHE_PACKAGE = "@GAUCHE_PACKAGE@"
INSTALL        = "@GAUCHE_INSTALL@" -C

# Other parameters
SOEXT  = @SOEXT@
OBJEXT = @OBJEXT@
EXEEXT = @EXEEXT@
LOCAL_PATHS = "@LOCAL_PATHS@"

# Module-specific stuff
PACKAGE   = ggc.port.mirroring

ARCHFILES =
COMMANDS= $(srcdir)/gpsh
SCMFILES= $(srcdir)/mirroring.scm

HEADERS   =

TARGET    = $(ARCHFILES)
GENERATED =
CONFIG_GENERATED = Makefile config.cache config.log config.status \
		   configure.lineno autom4te*.cache $(PACKAGE).gpd

BINDIR            = "$(DESTDIR)@bindir@"
GAUCHE_PKGINCDIR  = "$(DESTDIR)@GAUCHE_PKGINCDIR@"
GAUCHE_PKGLIBDIR  = "$(DESTDIR)@GAUCHE_PKGLIBDIR@"
GAUCHE_PKGARCHDIR = "$(DESTDIR)@GAUCHE_PKGARCHDIR@"


all :

demo : manual.txt example.txt

manual.txt  : manual.scm
example.txt : example.scm

.SUFFIXES: .scm .txt
.scm.txt :
	gosh -l./mirroring.scm  gpsh $<  > $@

check : 
	@rm -f test.log
	$(GOSH) -l$(srcdir)/mirroring $(srcdir)/test.scm > test.log

post-install-check : 
	@rm -f test.log
	$(GOSH) $(srcdir)/test.scm > test.log

install : all
	$(INSTALL) -m 755 -T $(BINDIR) $(COMMANDS)
	$(INSTALL) -m 444 -T $(GAUCHE_PKGLIBDIR)/ggc/port $(SCMFILES)
	$(INSTALL) -m 444 -T $(GAUCHE_PKGLIBDIR)/.packages $(PACKAGE).gpd

uninstall :
	$(INSTALL) -U $(GAUCHE_PKGLIBDIR)/ggc.port $(SCMFILES)
	$(INSTALL) -U $(GAUCHE_PKGLIBDIR)/.packages $(PACKAGE).gpd

clean :
	$(GAUCHE_PACKAGE) compile --clean scmxref $(scmxref_SRCS)
	rm -rf core $(TARGET) $(GENERATED) *~ test.log so_locations *.txt

distclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED)  VERSION

